<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/curve_dialog"
    android:orientation="vertical">


    <Button
        android:id="@+id/gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/camera"
        android:layout_marginEnd="96dp"
        android:background="@drawable/gallery"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#070cb4"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="96dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/photo"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#070cb4"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="96dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/camera"
        android:layout_below="@+id/gallery"
        android:text="Camera"
        android:textStyle="bold|italic"
        android:layout_alignLeft="@+id/camera" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gallery"
        android:textStyle="bold|italic"
        android:layout_below="@+id/gallery"
        android:text="Gallery"
        android:layout_alignLeft="@+id/gallery" />

</RelativeLayout>